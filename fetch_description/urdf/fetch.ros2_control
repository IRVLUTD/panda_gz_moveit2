        </xacro:if>
        <state_interface name="position">
          <param name="initial_value">${initial_positions['l_gripper_finger_joint']}</param>
        </state_interface>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
    </ros2_control>
  </xacro:macro>
</robot>